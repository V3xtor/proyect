        "def mostrar_menu():\n",
        "    print(\"Bienvenido a LotesDuoc\")\n",
        "    print(\"1. Ver disponibilidad y selección de lotes\")\n",
        "    print(\"2. Ver Clientes\")\n",
        "    print('Para salir, escriba \"esc\"')\n",
        "\n",
        "\n",
        "def mostrar_disponibilidad_lotes(matriz):\n",
        "    for fila in matriz:\n",
        "        for lote in fila:\n",
        "            if lote == \"Vendido\":\n",
        "                print(\"[X]\", end=\" \")\n",
        "            else:\n",
        "                print(\"[ ]\", end=\" \")\n",
        "        print()\n",
        "\n",
        "\n",
        "tabla = [\n",
        "    [\"Disponible\", \"Disponible\", \"Vendido\"],\n",
        "    [\"Disponible\", \"Vendido\", \"Vendido\"],\n",
        "    [\"Vendido\", \"Disponible\", \"Disponible\"],\n",
        "]\n",
        "\n",
        "\n",
        "def mostrar_detalles_lote(lote):\n",
        "    print(\"Detalles del Lote:\")\n",
        "    print(\"Número de Lote:\", lote[0])\n",
        "    print(\"Tamaño del Terreno:\", lote[1])\n",
        "    print(\"Precio:\", lote[2])\n",
        "\n",
        "\n",
        "def seleccionar_lote():\n",
        "    lotes = [\n",
        "        [1, \"500 m²\", \"$100,000\"],\n",
        "        [2, \"600 m²\", \"$120,000\"],\n",
        "        [4, \"450 m²\", \"$90,000\"],\n",
        "        [8, \"550 m²\", \"$110,000\"],\n",
        "        [9, \"700 m²\", \"$150,000\"],\n",
        "    ]\n",
        "\n",
        "    while True:\n",
        "        numero_lote = int(input(\"Ingrese el número de lote seleccionado: \"))\n",
        "\n",
        "        lote_seleccionado = None\n",
        "        for lote in lotes:\n",
        "            if lote[0] == numero_lote:\n",
        "                lote_seleccionado = lote\n",
        "                break\n",
        "\n",
        "        if lote_seleccionado:\n",
        "            if tabla[(numero_lote - 1) // 3][(numero_lote - 1) % 3] == \"Vendido\":\n",
        "                print(\n",
        "                    \"El número de lote seleccionado ya está vendido. Por favor, elija otro.\"\n",
        "                )\n",
        "            else:\n",
        "                tabla[(numero_lote - 1) // 3][(numero_lote - 1) % 3] = \"Vendido\"\n",
        "                mostrar_detalles_lote(lote_seleccionado)\n",
        "\n",
        "                # Pedir nombre e id del cliente\n",
        "                nombre_cliente = input(\"Ingrese el nombre del cliente: \")\n",
        "                id_cliente = input(\"Ingrese la identificación del cliente: \")\n",
        "\n",
        "                # Agregar cliente a la tabla de clientes\n",
        "                clientes.append([id_cliente, nombre_cliente])\n",
        "\n",
        "                break\n",
        "        else:\n",
        "            print(\n",
        "                \"Número de lote inválido. Por favor, ingrese un número de lote válido.\"\n",
        "            )\n",
        "\n",
        "\n",
        "def mostrar_clientes():\n",
        "    for cliente in clientes:\n",
        "        print(\"Nombre del Cliente:\", cliente[1])\n",
        "        print()\n",
        "\n",
        "\n",
        "def menu():\n",
        "    while True:\n",
        "        mostrar_menu()\n",
        "        opcion = input(\"Seleccione una opción o escriba esc: \")\n",
        "\n",
        "        if opcion == \"1\":\n",
        "            print(\"Ha seleccionado Ver disponibilidad y selección de lotes\")\n",
        "            mostrar_disponibilidad_lotes(tabla)\n",
        "            seleccionar_lote()\n",
        "\n",
        "        elif opcion == \"2\":\n",
        "            print(\"Ha seleccionado ver clientes.\")\n",
        "            mostrar_clientes()\n",
        "            break\n",
        "        elif opcion == \"esc\":\n",
        "            print(\"¡Hasta luego!\")\n",
        "            break\n",
        "        else:\n",
        "            print(\"Opción inválida. Por favor, seleccione una opción válida.\")\n",
        "\n",
        "\n",
        "clientes = [\n",
        "    [1, \"John Smith\"],\n",
        "    [2, \"Alice Johnson\"],\n",
        "    [3, \"Michael Brown\"],\n",
        "    [4, \"Emily Davis\"],\n",
        "]\n",
        "\n",
        "menu()\n"
      ]
    }
